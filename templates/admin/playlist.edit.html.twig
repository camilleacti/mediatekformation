{% extends "base.html.twig" %}
{% block body %}
    <h2>
        Modification de la playlist :
    </h2>
    {% include "/admin/adminplaylist.html.twig" %}

      <div class="row mt-3">
        <div class="col">
            <h4 class="text-info mt-5">{{ playlist.name }}</h4>
            <strong>catégories : </strong>
                <!-- boucle pour afficher les catégories -->
                {% set anccategorie = '' %}
                {% for playlist in playlistcategories %}
                    {{ playlist.name }}&nbsp;
                {% endfor %}
            <br /><br />
            <strong>description :</strong><br />
                {{ playlist.description|nl2br }}
        </div>
        <div class="col">
            <h4 class="text-info mt-5">Nombre de formations : {{ playlistformations|length }}</h4>
            <!-- boucle sur l'affichage des formations -->
            {% for formation in playlistformations %}
                <div class="row mt-1">
                    <div class="col-md-auto">
                        {% if formation.miniature %}
                            
                                <img src="{{ formation.miniature }}" alt="miniature">
                            
                        {% endif %}  
                    </div>
                    <div class="col d-flex align-items-center">
                      
                            {{ formation.title }}
                                
                    </div>
                </div>
            {% endfor %}
        </div>
        
    </div>
{% endblock %}
